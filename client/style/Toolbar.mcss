.container {
    composes: subBar from 'HPCCloudStyle/Layout.mcss';
    background: #ccc;
    composes: colorBlack from 'HPCCloudStyle/Theme.mcss';
}

.filter {
    border-radius: 1em;
    padding: 2px 15px;
    border: 1px solid #ccc;
    line-height: 1.25em;
}

.breadcrumb {
    flex: 1;
    display: flex;
    justify-content: flex-start;
}

.toolbarTab {
    composes: colorBlack from 'HPCCloudStyle/Theme.mcss';
}

.breadcrumb a, .toolbarTab a {
    padding: 1px 10px;
}

.breadcrumb a:first-child, .toolbarTab a:first-child {
    padding-left: 12px;
}

.actions {
    flex: 1;
    display: flex;
    justify-content: flex-start;
    flex-direction: row-reverse;
    align-items: center;
}

.actionButton {
    composes: isClickable from 'HPCCloudStyle/States.mcss';
    padding: 7px 17px;
}

.title {
    flex: 1;
    text-align: center;
    cursor: default;
}
